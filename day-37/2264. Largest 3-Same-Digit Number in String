class Solution {
public:
    string largestGoodInteger(string num) {
        int n = num.length();
        string ans = "";
        
        for(int i=0;i<=n-3;i++){
            bool flag = true;
            string temp = "";
            temp += num[i];
            for(int j=i+1;j<=i+2;j++){
                if(num[j] != num[i]){
                    flag = false;
                    break;
                } 
                temp += num[j];
            }
            if(flag && temp.compare(ans) > 0){
                ans = temp;
            }
        }
        return ans;
    }
};

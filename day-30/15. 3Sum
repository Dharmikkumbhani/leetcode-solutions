class Solution {
public:
    vector<vector<int>> threeSum(vector<int>& nums) {
        int n = nums.size();
        vector<vector<int>>v;
        sort(nums.begin(),nums.end());

        for(int i=0;i<=n-3;i++){
            int j = i+1;
            int k = nums.size()-1;
            if(i > 0 && nums[i] == nums[i-1]) continue;

            while(j < k){
                int sum = nums[i] + nums[j] + nums[k];
                if(sum > 0){
                    k--;
                }
                else if(sum < 0){
                    j++;
                }
                else{
                    
                    v.push_back({nums[i],nums[j],nums[k]});
                    k--;
                    j++;
                    while(j < k && nums[j] == nums[j-1]) j++;
                }
            }
        }
        return v;
    }
};

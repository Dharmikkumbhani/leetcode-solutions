class Solution {
public:
    vector<int> plusOne(vector<int>& digits) {
        int n = digits.size();
        
        for(int i = n - 1; i >= 0; i--) {
            if(digits[i] < 9) {
                digits[i]++; // simple +1
                return digits;
            }
            digits[i] = 0; // carry forward
        }

        // If all were 9s like [9,9,9] â†’ result is [1,0,0,0]
        digits.insert(digits.begin(), 1);
        return digits;
    }
};

class Solution {
public:
    int countConsistentStrings(string allowed, vector<string>& words) {
        unordered_map<char,int>m;
        for(int i=0;i<allowed.length();i++){
            m[allowed[i]]++;
        }
        int count = 0;

        for(int i=0;i<words.size();i++){
            bool flag = true;
            for(int j=0;j<words[i].size();j++){
                if(m.find(words[i][j]) == m.end()){
                    flag = false;
                    break;
                }
            }
            if(flag){
                count++;
            }
        }
        return count;
    }
};
